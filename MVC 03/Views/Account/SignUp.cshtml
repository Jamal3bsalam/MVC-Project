@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div asp-validation-summary="All" class="text-light"></div>
	<div class="agileits-top">
		<form asp-action="SignUp">
			<input class="text" type="text" asp-for="UserName" placeholder="Username" required="">
			<input class="text" type="text" asp-for="FirstName" placeholder="FirstName" required="">
			<input class="text" type="text" asp-for="LastName" placeholder="LastName" required="">
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<input class="text" type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required="">
			<p></p>
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div> 
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

